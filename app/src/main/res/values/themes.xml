<?xml version="1.0"?>

<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style parent="Theme.MaterialComponents.DayNight.DarkActionBar" name="Theme.NeoStore">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/colorprimaryred</item>
    <item name="colorPrimaryVariant">@color/colorprimaryvariant</item>
    <item name="colorOnPrimary">@color/white</item>

    <!-- Secondary brand color. -->

    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>

    <!-- Status bar color. -->

    <item name="android:statusBarColor"
        tools:targetApi="l">?attr/colorPrimaryVariant</item>

    <!-- Customize your theme here. -->
</style>

    <style parent="Theme.MaterialComponents.DayNight.NoActionBar" name="Theme.NeoStore.Fullscreen">

    <!-- Primary brand color. -->

    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="android:windowFullscreen">true</item>
    <item name="colorPrimary">@color/colorprimaryred</item>
    <item name="colorPrimaryVariant">@color/colorprimaryvariant</item>
    <item name="colorOnPrimary">@color/white</item>

    <!-- Secondary brand color. -->

    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>

    <!-- Status bar color. -->
    <item name="android:statusBarColor"
        tools:targetApi="l">?attr/colorPrimaryVariant</item>

    <!-- Customize your theme here. -->
</style>

    <style name="NavigationDrawerTextStyle">
    <item name="android:textSize">16sp</item>
    <item name="android:fontFamily">@font/gotham_medium</item>

</style>
    <style parent="Theme.MaterialComponents.DayNight.NoActionBar" name="Theme.NeoStore.Home">

    <!-- Primary brand color. -->

    <item name="colorPrimary">@color/colorprimaryred</item>
    <item name="colorPrimaryVariant">@color/colorprimaryvariant</item>
    <item name="colorOnPrimary">@color/white</item>

    <!-- Secondary brand color. -->

    <item name="colorSecondary">@color/teal_200</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>

    <!-- Status bar color. -->

    <item name="android:statusBarColor"
        tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    <!-- Customize your theme here. -->

</style>

    <style parent="Widget.AppCompat.DrawerArrowToggle" name="DrawerArrowStyle">
    <item name="spinBars">true</item>
    <item name="color">@android:color/white</item>

</style>

    <style parent="Theme.AppCompat" name="RatingBar">
    <item name="colorControlNormal">#8e8e8e</item>
    <item name="colorControlActivated">@color/starratingcolor</item>

</style>

</resources>