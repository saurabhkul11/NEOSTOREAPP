<?xml version="1.0" encoding="UTF-8"?>

<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorprimaryred"
    android:id="@+id/myaccount"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/myAccountToolBar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorprimaryred"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ImageView
                android:id="@+id/myAccountTollbarBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/back_symbol"/>


            <TextView
                android:id="@+id/myAccountToolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_medium"
                android:layout_gravity="center"
                android:text="My Account"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="22sp"
                />
            <ImageView
                android:id="@+id/myAccountImgSearch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:src="@drawable/search_icon"/>

        </androidx.appcompat.widget.Toolbar>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="133.33dp"
            android:layout_height="133.33dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/profile_icon"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/myAccountToolBar"
            />

        <TextView
            android:id="@+id/txtAccFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="33.33dp"
            android:layout_marginRight="33.33dp"
            android:hint="First Name"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:drawableLeft="@drawable/person_symbol"
            app:layout_constraintTop_toBottomOf="@+id/profileImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/custom_input"
            android:drawablePadding="15dp"
            android:textColor="@color/white"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/txtAccLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.33dp"
            android:layout_marginLeft="33.33dp"
            android:layout_marginRight="33.33dp"
            android:hint="Last Name"
            android:textSize="18sp"
            android:drawableLeft="@drawable/person_symbol"
            app:layout_constraintTop_toBottomOf="@+id/txtAccFirstName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/custom_input"
            android:drawablePadding="15dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/txtAccEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.33dp"
            android:layout_marginLeft="33.33dp"
            android:layout_marginRight="33.33dp"
           android:hint="Email"
            android:textColorHint="@color/white"
            android:fontFamily="@font/gothamfontfamily"
            android:textSize="18sp"
            android:drawableLeft="@drawable/email_symbol"
            app:layout_constraintTop_toBottomOf="@+id/txtAccLastName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/custom_input"
            android:drawablePadding="15dp"
            android:textColor="@color/white"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/txtAccPhonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.33dp"
            android:layout_marginLeft="33.33dp"
            android:layout_marginRight="33.33dp"
            android:hint="Phone Number"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:drawableLeft="@drawable/phone_symbol"
            app:layout_constraintTop_toBottomOf="@+id/txtAccEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/custom_input"
            android:drawablePadding="15dp"
            android:textColor="@color/white"
            android:padding="10dp"
            />

        <TextView
            android:id="@+id/txtAccDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.33dp"
            android:layout_marginLeft="33.33dp"
            android:layout_marginRight="33.33dp"
            android:hint="DOB"
            android:textColorHint="@color/white"
            android:textSize="18sp"
            android:drawableLeft="@drawable/cake_symbol"
            app:layout_constraintTop_toBottomOf="@+id/txtAccPhonenumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/custom_input"
            android:drawablePadding="15dp"
            android:textColor="@color/white"
            android:padding="10dp"
            />

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="33.33dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="33.33dp"
            android:background="@color/white"
            android:text="EDIT PROFILE"
            android:fontFamily="@font/gotham_bold"
            android:textColor="#E91C1A"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAccDOB" />


        <Button
            android:layout_width="match_parent"
            android:id="@+id/btnResetPassword"
            android:layout_height="53.33dp"
            android:background="@color/white"
            android:text="RESET PASSWORD"
            android:textSize="17dp"
            android:gravity="center"
            android:textColor="#333333"
            android:fontFamily="@font/gotham_bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="-6dp"
            />
</androidx.constraintlayout.widget.ConstraintLayout>